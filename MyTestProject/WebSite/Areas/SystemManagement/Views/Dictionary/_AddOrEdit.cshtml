@model Entities.B_Dictionary

@Html.HiddenFor(d => d.Id)
@Html.HiddenFor(d => d.IsDelete)
@Html.HiddenFor(d => d.CreateBy)
@Html.HiddenFor(d => d.CreateDate)
@Html.HiddenFor(d => d.UpdateBy)
@Html.HiddenFor(d => d.UpdateDate)

<style>
    .layui-form-label {
        width: 100px;
    }
</style>

<div class="layui-form-item">
    <label class="layui-form-label">字典编码：</label>
    <div class="layui-input-block">
        @Html.TextBoxFor(d => d.Code,
       new Dictionary<string, object> {
               { "class", "layui-input" },
               { "placeholder", "请输入字典编码" },
               { "lay-verify","required"} })
    </div>
</div>
<div class="layui-form-item">
    <label class="layui-form-label">字典：</label>
    <div class="layui-input-block">
        @Html.TextBoxFor(d => d.DictionaryName,
       new Dictionary<string, object> {
               { "class", "layui-input" },
               { "placeholder", "请输入字典名" },
               { "lay-verify","required"} })
    </div>
</div>
<div class="layui-form-item">
    <label class="layui-form-label">字典类别：</label>
    <div class="layui-input-block">
        @Html.DropDownListFor(d => d.DictionaryTypeCode, ViewBag.DictionaryTypeList as List<SelectListItem>,
            new Dictionary<string, object> {{ "class", "layui-input" }, { "lay-verify", "required" },{ "lay-search", "" } })
    </div>
</div>
<div class="layui-form-item">
    <label class="layui-form-label">描述：</label>
    <div class="layui-input-block">
        @Html.TextBoxFor(d => d.Description,
       new Dictionary<string, object> {
               { "class", "layui-input" },
               { "placeholder", "请输入字典描述" }})
    </div>
</div>
<div class="layui-form-item">
    <div class="layui-input-block">
        <button type="submit" lay-submit="" class="btn btn-primary">保存</button>
    </div>
</div>

<script>
    layui.use(['form'], function () {
        var form = layui.form;
        form.render();
    });
</script>